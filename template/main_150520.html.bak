<script type="text/javascript">
$(function(){
	$("a[data-action='collapse']").removeAttr("data-action").css({"color":"#777777"});
	$(".zhedie").css({"cursor":"pointer"});
	$(".zhedie").click(function(){
		if($(this).find(".icon-chevron-down").length > 0 ){
			$(this).find(".icon-chevron-down").addClass("icon-chevron-up").removeClass("icon-chevron-down");
			$(this).next(".widget-body").slideDown("3");
		}else{
			$(this).find(".icon-chevron-up").addClass("icon-chevron-down").removeClass("icon-chevron-up");
			$(this).next(".widget-body").slideUp("3");
		}
	});
})
</script>
